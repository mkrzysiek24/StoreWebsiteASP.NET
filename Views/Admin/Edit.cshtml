@model EditItemViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit @Model.CategoryName</title>
    <link rel="stylesheet" href="~/css/addSneaker.css">
</head>
<body>
    <div class="dashboard">
        <div class="menu">
            <ul>
                <li><a href="/admin">Kokpit</a></li>
                <li><a href="/admin/orders">Zamówienia</a></li>
                <li><a href="/admin/users">Użytkownicy</a></li>
                <li><a href="/admin/sneakers">Obuwie</a></li>
                <li><a href="/admin/clothes">Ubrania</a></li>
                <li><a href="/admin/accessories">Akcesoria</a></li>
                <li><a href="/logout">Wyloguj się</a></li>
            </ul>
        </div>
        <div class="content">
            <h1>Edytuj @Model.CategoryName</h1>
            <form method="post" action="/admin/items/edit/@Model.Id">
                <input type="hidden" name="CategoryName" value="@Model.CategoryName" />

                <label for="brand">Marka:</label>
                <input type="text" id="brand" name="brand" value="@Model.Brand" required>

                <label for="gender">Płeć:</label>
                <input type="text" id="gender" name="gender" value="@Model.Gender" required>

                <label for="imageURL">URL obrazka:</label>
                <input type="text" id="imageURL" name="imageURL" value="@Model.ImageURL" required>

                <label for="name">Nazwa:</label>
                <input type="text" id="name" name="name" value="@Model.Name" required>

                <label for="price">Cena:</label>
                <input type="number" id="price" name="price" value="@Model.Price" required>

                <label for="slug">Slug:</label>
                <input type="text" id="slug" name="slug" value="@Model.Slug" required>

                <label for="sizes">Rozmiary:</label>
                <div id="sizes">
                    @for (int i = 0; i < Model.Sizes.Count; i++)
                    {
                        <div class="size-item">
                            <label for="size_@i" class="size-label">Rozmiar:</label>
                            <input type="text" id="size_@i" name="Sizes[@i].SizeValue" value="@Model.Sizes[i].SizeValue" required />
                            
                            <label for="quantity_@i" class="quantity-label">Ilość:</label>
                            <input type="number" id="quantity_@i" name="Sizes[@i].Quantity" value="@Model.Sizes[i].Quantity" required />
                        </div>
                    }
                </div>
                <button type="submit">Edytuj produkt</button>
            </form>
        </div>
    </div>
</body>
</html>
