@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sneakers Planet - Zmiana hasła</title>
    <link rel="stylesheet" href="/css/details.css">
</head>
<body>
    <div class="dashboard">
        <div class="menu">
            <ul>
                <li><a href="/account">Kokpit</a></li>
                <li><a href="/account/orders">Zamówienia</a></li>
                <li><a href="/account/adress">Adres</a></li>
                <li><a href="/account/details">Szczegóły konta</a></li>
                <li><a href="/logout">Wyloguj się</a></li>
            </ul>
        </div>
        <div class="content">
            <h1>Zmiana hasła</h1>
            <p>Zmiana hasła jest nieodwracalna</p>
            <div class="form-container">
                <form asp-action="ChangePassword" method="post">
                    <label>
                        <span>Stare hasło:</span>
                        <input type="password" name="oldPassword" required>
                    </label>
                    <label>
                        <span>Nowe hasło:</span>
                        <input type="password" name="newPassword" required>
                    </label>
                    <label>
                        <span>Potwierdź nowe hasło:</span>
                        <input type="password" name="confirmPassword" required>
                    </label>
                    <button type="submit">Zmień hasło</button>
                </form>
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="error-message">
                        <p>@TempData["ErrorMessage"]</p>
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="success-message">
                        <p>@TempData["SuccessMessage"]</p>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
